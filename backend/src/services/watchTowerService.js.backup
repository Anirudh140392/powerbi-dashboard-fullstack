                    ['manufacturer_name', 'Brand'],
                    [Sequelize.fn('SUM', Sequelize.literal('CAST(qty_sold AS DECIMAL(10,2)) * CAST(mrp AS DECIMAL(10,2))')), 'total_sales'],
                    [Sequelize.literal('0'), 'total_spend'],
